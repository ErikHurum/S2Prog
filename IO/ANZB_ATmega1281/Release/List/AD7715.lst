     35          fcompare(float a, float b) {
     36              //
     37              // returns -1 when a < b
     38              //          1 when a > b
     39              //          0 when equal
     40              //
     41          #define FLT_EPSILON 0.000001f
     42          
     43              float d = a - b;
     44          
     45              if (d >= -FLT_EPSILON && d <= FLT_EPSILON) {
     46                  return 0;
     47              }
     48          
     49              if (d < -FLT_EPSILON) {
     50                  // a is less than b
     51                  return -1;
     52              }
     53          
     54              // a is bigger than b
     55              return 1;
     56          }
