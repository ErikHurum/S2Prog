//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "TankPressureUnit.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma link "AdvSmoothGauge"
#pragma link "LinePressureUnit"
#pragma link "AdvSmoothPanel"
#pragma resource "*.dfm"
TTankPressureForm *TankPressureForm;
//---------------------------------------------------------------------------
__fastcall TTankPressureForm::TTankPressureForm(TComponent* Owner)
	: TLinePressureForm(Owner,C_PRO_TANKPRESS)
{
}
//---------------------------------------------------------------------------
void __fastcall TTankPressureForm::Timer1Timer(TObject *Sender)
{
	PROTankPressure *CurrentTPressPtr = (PROTankPressure*)CurrentTankPtr;
	if (CurrentTPressPtr) {
		LocationNamePanel->Caption->HTMLText = CurrentTankPtr->Name;

		int DummyU, DummyDP;
		float Pressure;
		int Status = CurrentTPressPtr->GetValue(SVT_PRESSURE,0,Pressure,DummyU,DummyDP);

		AdvSmoothGaugeLinePressure->Value = Pressure*MH2O_TO_MBAR;
		AdvSmoothGaugeLinePressure->Digit->Visible =  (Status == GETVAL_NO_ERR );
		/*
		float EndValue = AdvSmoothGaugeLinePressure->Arc->Threshold->EndValue;
		float Limit    = CurrentTPressPtr->HighPressurePtr->Limit*MH2O_TO_BAR;
		AdvSmoothGaugeLinePressure->Arc->Threshold->Span = 12.5*(EndValue - Limit)+0.5;
		*/
		double LimitLL, LimitHH;
		bool  noHHLimit = false;
		bool  noLLLimit = false;
		double LimitL    = CurrentTPressPtr->LowPressurePtr->Limit*MH2O_TO_MBAR;
		double LimitH    = CurrentTPressPtr->HighPressurePtr->Limit*MH2O_TO_MBAR;
		AlarmIntHighPressure1 *IntHighPressurePtr1 = CurrentTPressPtr->IntHighPressurePtr1 ;
		AlarmIntHighPressure2 *IntHighPressurePtr2 = CurrentTPressPtr->IntHighPressurePtr2 ;
		AlarmIntLowPressure1  *IntLowPressurePtr1  = CurrentTPressPtr->IntLowPressurePtr1 ;
		AlarmIntLowPressure2  *IntLowPressurePtr2  = CurrentTPressPtr->IntLowPressurePtr2 ;

		if (IntHighPressurePtr2) {
			LimitHH = IntHighPressurePtr2->Limit*MH2O_TO_MBAR;
		} else if (IntHighPressurePtr1) {
			LimitHH = IntHighPressurePtr1->Limit*MH2O_TO_MBAR;
		} else {
			 noHHLimit = true;
			 LimitHH   = LimitH;
		}
		if (IntLowPressurePtr2) {
			LimitLL = IntLowPressurePtr2->Limit*MH2O_TO_MBAR;
		} else if (IntLowPressurePtr1) {
			LimitLL = IntLowPressurePtr1->Limit*MH2O_TO_MBAR;
		}else{
			 noLLLimit = true;
			 LimitLL   = LimitL;

		}
		if ( LimitHH*1.25 < 250.0 ) {
			 AdvSmoothGaugeLinePressure->MaximumValue = 250.0;
		}else if ( LimitHH*1.25 < 300.0 ) {
			 AdvSmoothGaugeLinePressure->MaximumValue = 300.0;
		}else if ( LimitHH*1.25 < 500.0 ) {
			 AdvSmoothGaugeLinePressure->MaximumValue = 500.0;
		}
		if ( LimitLL*1.25 > -50.0 ) {
			 AdvSmoothGaugeLinePressure->MinimumValue = -50.0;
		}else if ( LimitLL*1.25 > -100.0 ) {
			 AdvSmoothGaugeLinePressure->MinimumValue = -100.0;
		}else if ( LimitLL*1.25 > -200.0 ) {
			 AdvSmoothGaugeLinePressure->MinimumValue = -200.0;
		}
		AdvSmoothGaugeLinePressure->Sections->Items[1]->EndValue =  AdvSmoothGaugeLinePressure->MaximumValue;
		AdvSmoothGaugeLinePressure->Sections->Items[2]->EndValue =  AdvSmoothGaugeLinePressure->MinimumValue;
		if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 300) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 6;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 350) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 7;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 400) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 8;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 500) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 5;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 600) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 6;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 700) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 7;
		} else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 800) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 8;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 900) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 9;
		}else if ( abs( (AdvSmoothGaugeLinePressure->MaximumValue - AdvSmoothGaugeLinePressure->MinimumValue) - 1000) < 1.0) {
			AdvSmoothGaugeLinePressure->DivisionCount = 10;
		}
		// HighHigh section, only start point required
		AdvSmoothGaugeLinePressure->Sections->Items[1]->StartValue = LimitHH;
		// LowLow section, only end point required
		AdvSmoothGaugeLinePressure->Sections->Items[2]->StartValue   = LimitLL;
		// Hi pressure section
		if (noHHLimit) {
			AdvSmoothGaugeLinePressure->Sections->Items[0]->Opacity  = 0;
		}else{
			AdvSmoothGaugeLinePressure->Sections->Items[0]->StartValue = LimitH;
			AdvSmoothGaugeLinePressure->Sections->Items[0]->EndValue   = LimitHH;
		}
		// Lo pressure section
		if (noHHLimit) {
			AdvSmoothGaugeLinePressure->Sections->Items[3]->Opacity  = 0;
		}else{
		AdvSmoothGaugeLinePressure->Sections->Items[3]->StartValue = LimitL;
		AdvSmoothGaugeLinePressure->Sections->Items[3]->EndValue   = LimitLL;
		}
	}

}
//---------------------------------------------------------------------------
