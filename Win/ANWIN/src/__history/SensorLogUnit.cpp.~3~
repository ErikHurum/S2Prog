//---------------------------------------------------------------------------

#include <System.hpp>
#include "ANWinInc.h"
#pragma hdrstop

#include "SensorLogUnit.h"
#pragma package(smart_init)
//---------------------------------------------------------------------------

//   Important: Methods and properties of objects in VCL can only be
//   used in a method called using Synchronize, for example:
//
//      Synchronize(&UpdateCaption);
//
//   where UpdateCaption could look like:
//
//      void __fastcall SensorLogThread::UpdateCaption()
//      {
//        Form1->Caption = "Updated in a thread";
//      }
//---------------------------------------------------------------------------

__fastcall SensorLogThread::SensorLogThread(bool CreateSuspended)
	: TThread(CreateSuspended)
{
}
//---------------------------------------------------------------------------
void __fastcall SensorLogThread::Execute()
{
	NameThreadForDebugging(System::String(L"SensorLog"));
	//---- Place thread code here ----
	try {
		unsigned NumberOfSensors = AIPressSensor_mA::ObjectSet.size();
		unsigned Delay         = 30000 / NumberOfSensors;
		while (!Terminated) {
			AIPressSensor_mA::LogData(Terminated,Delay);
		}
	}
	catch (...) {
	}
}
//---------------------------------------------------------------------------
